<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="jose.tab.fragments.NfcFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView01"
        android:layout_weight="0.49" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView02"
        android:layout_centerVertical="true"
        android:layout_below="@+id/textView01">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nfc_cont"
            android:layout_alignTop="@+id/scrollView02"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/name_nfc_layout"
                android:layout_below="@+id/textView02"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="57dp"
                android:gravity="left">

                <TextView
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Nombre de la Obra"
                    android:layout_width = "122dp"
                    android:id="@+id/nfc_lbl_name"
                    android:layout_gravity="left"
                    android:layout_alignTop="@+id/scrollView02"
                    android:layout_toLeftOf="@+id/scrollView02"
                    android:layout_toStartOf="@+id/scrollView02"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/nfc_txt_name"
                    android:layout_width="277dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="false"
                    android:hint="Nombre Obra"
                    android:maxLength="55"
                    android:maxLines="3"
                    android:minLines="1"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:phoneNumber="false"
                    android:singleLine="false"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:textStyle="italic|normal"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="0.49"
                android:layout_below="@+id/textView01"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="0.49"
                android:layout_below="@+id/textView01"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />-->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/author_nfc_layout"
                android:layout_below="@+id/textView02"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="57dp"
                android:gravity="left" >

                <TextView
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Autor de la Obra"
                    android:layout_width="122dp"
                    android:id="@+id/nfc_author_label"
                    android:layout_gravity="left"
                    android:layout_alignTop="@+id/scrollView02"
                    android:layout_toLeftOf="@+id/scrollView02"
                    android:layout_toStartOf="@+id/scrollView02"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/nfc_author_txt"
                    android:layout_width="277dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="false"
                    android:hint="Nombre Autor"
                    android:maxLength="55"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:phoneNumber="false"
                    android:singleLine="true"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:textStyle="italic|normal"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="0.49"
                android:layout_below="@+id/textView01"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="0.49"
                android:layout_below="@+id/textView01"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />-->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/creation_local_layout"
                android:layout_below="@+id/textView02"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="57dp"
                android:gravity="left" >

                <TextView
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Fecha de Creación de la Obra"
                    android:layout_width="wrap_content"
                    android:id="@+id/nfc_label_creation"
                    android:layout_gravity="left"
                    android:layout_alignTop="@+id/scrollView02"
                    android:layout_toLeftOf="@+id/scrollView02"
                    android:layout_toStartOf="@+id/scrollView02"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/nfc_txt_creation"
                    android:layout_width="277dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="false"
                    android:hint="Año de Creación"
                    android:maxLength="55"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:phoneNumber="false"
                    android:singleLine="true"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:textStyle="italic|normal"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView077"
                android:layout_weight="0.49"
                android:layout_below="@+id/creation_local_layout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView078"
                android:layout_weight="0.49"
                android:layout_below="@+id/textView077"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView079"
        android:layout_weight="0.49"
        android:layout_below="@+id/scrollView02"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView075"
        android:layout_weight="0.49"
        android:layout_below="@+id/textView079"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>